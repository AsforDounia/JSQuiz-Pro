<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - DevQuiz Pro</title>
    <meta
      name="description"
      content="Personal dashboard for tracking your quiz progress and achievements"
    />
    <!-- <link rel="stylesheet" href="styles.css" /> -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="site-header">
      <div class="container">
        <div class="header-content">
          <div class="logo-section">
            <div class="logo-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M9 11H5a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7a2 2 0 0 0-2-2h-4"
                />
                <polyline points="9,11 9,9 15,9 15,11" />
                <polyline points="9,9 9,4 15,4 15,9" />
              </svg>
            </div>
            <span class="logo-text">DevQuiz Pro</span>
          </div>
          <div class="header-actions">
            <a href="/" class="btn">Accueil</a>
            <form action="/auth/logout" method="POST">
              <button type="submit" class="btn">D√©connexion</button>
            </form>
            <!-- <button id="logoutBtn" class="btn">D√©connexion</button> -->
          </div>
        </div>
      </div>
    </header>

    <!-- Main Dashboard Content -->
    <main class="dashboard-main">
      <div class="container">
        <!-- Stats Overview -->
        <div class="dashboard-stats">
          <div class="stat-card">
            <div class="stat-icon stat-icon-total">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
                />
                <polyline points="14,2 14,8 20,8" />
                <line x1="16" y1="13" x2="8" y2="13" />
                <line x1="16" y1="17" x2="8" y2="17" />
                <polyline points="10,9 9,9 8,9" />
              </svg>
            </div>
            <div class="stat-content">
              <div class="stat-value" id="totalQuizzes"><%= userStats.completed %></div>
              <div class="stat-label">Quiz Compl√©t√©s</div>
            </div>
          </div>

          <div class="stat-card">
            <div class="stat-icon stat-icon-success">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polyline points="20,6 9,17 4,12" />
              </svg>
            </div>
            <div class="stat-content">
              <div class="stat-value" id="averageScore"><%= userStats.avgScore %>%</div>
              <div class="stat-label">Score Moyen</div>
            </div>
          </div>

          <div class="stat-card">
            <div class="stat-icon stat-icon-time">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="12" cy="12" r="10" />
                <polyline points="12,6 12,12 16,14" />
              </svg>
            </div>
            <div class="stat-content">
              <div class="stat-value" id="totalTime"><%= userStats.totalTime %>min</div>
              <div class="stat-label">Temps Total</div>
            </div>
          </div>

          <div class="stat-card">
            <div class="stat-icon stat-icon-streak">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"/>
              </svg>
              </svg>
            </div>
            <div class="stat-content">
              <div class="stat-value" id="bestScore">
                <%= typeof userStats.bestScore !== 'undefined' ? userStats.bestScore : 0 %>
              </div>
              <div class="stat-label">Meilleur Score</div>
            </div>
          </div>
        </div>

        <!-- Top Players Leaderboard -->
        <div class="dashboard-section">
          <h2 class="section-title">Classement Global</h2>
          <div class="leaderboard">
            <% if (typeof topPlayers !== 'undefined' && topPlayers.length > 0) { %>
              <% topPlayers.forEach(function(player, idx) { %>
                <div class="leaderboard-item rank-<%= idx+1 %>">
                  <div class="rank-badge"><%= idx+1 %></div>
                  <div class="player-avatar">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                      <circle cx="12" cy="7" r="4"/>
                    </svg>
                  </div>
                  <div class="player-info">
                    <div class="player-name"><%= player.name || player.username || player.email %></div>
                    <div class="player-stats">
                      <%= player.completed %> quiz compl√©t√©s ‚Ä¢ <%= player.avgScore %>% de moyenne
                    </div>
                  </div>
                  <div class="player-score"><%= player.points.toLocaleString() %> pts</div>
                </div>
              <% }); %>
            <% } else { %>
              <div>Aucun joueur trouv√©.</div>
            <% } %>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="dashboard-section">
          <h2 class="section-title">Actions Rapides</h2>
          <div class="quick-actions">
            <a href="/quiz/list" class="action-card">
              <div class="action-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M5 12l5 5l10-10" />
                </svg>
              </div>
              <h3>Nouveau Quiz</h3>
              <p>Commencer un nouveau d√©fi</p>
            </a>

            <button class="action-card" id="practiceMode">
              <div class="action-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="12" r="10" />
                  <polygon points="10,8 16,12 10,16 10,8" />
                </svg>
              </div>
              <h3>Mode Pratique</h3>
              <p>R√©viser vos erreurs</p>
            </button>

            <button class="action-card" id="achievements">
              <div class="action-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6" />
                  <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18" />
                  <path d="M4 22h16" />
                  <path
                    d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"
                  />
                  <path
                    d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"
                  />
                  <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z" />
                </svg>
              </div>
              <h3>R√©alisations</h3>
              <p>Voir vos badges</p>
            </button>
          </div>
        </div>
      </div>
    </main>

    <!-- Achievement Modal -->
    <div id="achievementModal" class="modal-overlay hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">üèÜ R√©alisations</h2>
          <p class="modal-description">Vos badges et accomplissements</p>
        </div>
        <div id="achievementsList" class="achievements-grid">
          <!-- Achievements will be loaded here -->
        </div>
        <div class="modal-actions">
          <button id="closeAchievements" class="btn btn-primary">Fermer</button>
        </div>
      </div>
    </div>

    <script src="dashboard.js"></script>
  </body>
</html>
